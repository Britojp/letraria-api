# Configurações de Ambiente - Letrar IA Backend

# Database
# Quando usar Docker, a porta será 55432
DATABASE_URL=postgresql+asyncpg://letraria_user:letraria_password@localhost:55432/letraria_db

# Security
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=["http://localhost:3100", "http://localhost:5174"]

# Environment
ENVIRONMENT=development
DEBUG=true

# OpenAI API (para Whisper - transcrição de áudio)
OPENAI_API_KEY=your-openai-api-key-here

# Google Gemini
GOOGLE_GENAI_API_KEY=your-google-genai-api-key-here
GOOGLE_GENAI_MODEL=gemini-2.5-flash
GOOGLE_GENAI_LOCATION=us-central1

